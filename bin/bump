#!/usr/bin/env node

const fs = require("fs");
const readline = require("readline");
const { patch } = require("../routes");
const rl = readline.createInterface({
  input: process.stdin,
  output: process.stdout
});

fs.readFile('package.json', (err, data) => { // npm run bump makes the file on the root directory 
    if (err) {                               // so its not ../package.json as initially tought 
      console.error(err)
      return
    }
    pkg_info = JSON.parse(data);
    pkg_info.build = (parseInt(pkg_info.build) + 1).toString();
    pkg_info = JSON.stringify(pkg_info, null, 2);
    fs.writeFile('package.json', pkg_info, function (err) {
      if (err) {
        console.log(err);
        return;
      }
      console.log("build");
    });
    
    
  
  })